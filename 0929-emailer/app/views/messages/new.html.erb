<h1>New Message</h1>

<%= form_for @message do |f| %>
  <p>
    <%= f.label :from %><br>
    <%= f.text_field :from, placeholder: "From" %>
  </p>
  
  <p>
    <%= f.label :to %><br>
    <%= f.text_field :to, placeholder: "To" %>
  </p>
  
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, placeholder: "Type content here." %>
  </p>
  
  <%= f.submit "Submit" %>
<% end %>